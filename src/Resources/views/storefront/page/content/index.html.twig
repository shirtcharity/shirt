{% sw_extends '@Storefront/storefront/page/content/index.html.twig' %}

{% block cms_breadcrumb %}
    {% set breadcrumb = sw_breadcrumb(page.header.navigation.active) %}
    {% set breadcrumbKeys = breadcrumb|keys %}
    {% set breadcrumbTypes = sw_breadcrumb_types(breadcrumbKeys, context.context) %}
    {% if breadcrumb|length > 1 and (breadcrumbTypes|first != 'folder' or breadcrumb|length > 2) %}
        {{ parent() }}
    {% endif %}
{% endblock %}
